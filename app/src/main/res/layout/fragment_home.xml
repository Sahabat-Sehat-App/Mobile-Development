            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/cv_swap"
            app:layout_constraintStart_toStartOf="@+id/cv_swap"
            app:layout_constraintTop_toBottomOf="@+id/cv_swap" />


        <androidx.cardview.widget.CardView
